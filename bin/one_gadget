#!/usr/bun/env ruby
require 'one_gadget'
require 'optionparser'

options = {}
usage = 'Usage: one_gadget [file] [--build-id <BuildID>]'
parser = OptionParser.new do |opts|
  opts.banner = usage

  opts.on('-b', '--build-id BuildID', 'BuildID[sha1] of libc') do |b|
    options[:build_id] = b
  end
end
parser.parse!

if options[:build_id]
  puts OneGadget.gadgets(build_id: options[:build_id], details: true).map(&:inspect).join("\n")
elsif ARGV[0]
  puts OneGadget.gadgets(file: ARGV[0], details: true).map(&:inspect).join("\n")
else
  puts parser.help
end
